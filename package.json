{
  "name": "@tetherto/wdk-react-native-core",
  "version": "1.0.0",
  "description": "Core functionality for React Native wallets - wallet management, balance fetching, and worklet operations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "react-native": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tetherto/wdk-react-native-core.git"
  },
  "bugs": {
    "url": "https://github.com/tetherto/wdk-react-native-core/issues"
  },
  "homepage": "https://github.com/tetherto/wdk-react-native-core#readme",
  "scripts": {
    "build": "tsc || true",
    "build:strict": "tsc",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepack": "npm run build",
    "postinstall": "npm run build"
  },
  "keywords": [
    "wallet",
    "react-native",
    "core",
    "crypto",
    "blockchain",
    "balance"
  ],
  "author": "Tetherto",
  "license": "Apache-2.0",
  "dependencies": {
    "@tetherto/wdk-react-native-secure-storage": "github:tetherto/wdk-react-native-secure-storage",
    "@tetherto/pear-wrk-wdk": "github:nampc1/pear-wrk-wdk-v2-fork#nampc/dynamic-worklet",
    "@tanstack/react-query": "^5.0.0",
    "expo-crypto": "^15.0.8",
    "immer": "^11.1.3",
    "react-native-bare-kit": "^0.12.0",
    "react-native-mmkv": "^4.1.0",
    "zod": "^3.22.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "ts-standard": "12.0.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^19.0.0",
    "@types/react-native": "^0.73.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react-native": ">=0.70.0"
  }
}
